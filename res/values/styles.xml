<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    
    <!-- Customer theme. -->
 	<style name="tabTheme" parent="android:Theme.Holo">
 	    <item name="android:actionBarStyle">@style/MyActionBar</item>
    	<item name="android:calendarViewStyle">@style/Widget.CalendarView.Custom</item>
	</style>
	
 	
 	<!-- ActionBar theme. -->
 	<style name="MyActionBar" parent="@android:style/Widget.Holo.ActionBar">
    	<item name="android:background">@color/black</item>
    	<item name="android:icon">@drawable/ic_launcher</item>
    	<item name="android:titleTextStyle">@style/TitleTextStyle</item>   
	</style>
	
 	<style name="TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
    	<item name="android:textColor">@color/white</item>
  	</style>
  	
 	
 	<!-- Calendar theme. -->
 	
 	<style name="Widget.CalendarView.Custom" parent="@android:style/Widget.Holo.Light.CalendarView">
    	<item name="android:focusedMonthDateColor">@color/black</item>
    	<item name="android:unfocusedMonthDateColor">@color/white</item>
    	<item name="android:weekNumberColor">@color/black</item>  
    	<item name="android:weekDayTextAppearance">@style/dayscalendar</item>    	
  	</style>

 	<style name="dayscalendar">
    	<item name="android:textSize">@dimen/text_login</item>
    	    	
  	</style>
  

</resources>